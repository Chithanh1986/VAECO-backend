<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update user</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="edit-user-info-container">
            <form method="POST" action="/user/update-user">

                <!-- <div class="row"> -->

                <div class="mb-3 mt-3 col-6">
                    <!-- <img src="/images/logologin.jpg" class="img-fluid"> -->
                    <label for="vae_user" class="form-label">Update a new user:</label>
                    <input hidden value="<%= userData.id %>" name="id">
                    <input value="<%= userData.vae_user %>" type="text" class="form-control" id="vae_user"
                        name="vae_user" required>
                </div>

                <div class="mb-3 mt-3 col-6">
                    <label for="vae_id" class="form-label">Vaeco ID</label>
                    <input value="<%= userData.vae_id %>" type="text" class="form-control" id="vae_id" name="vae_id"
                        required>
                </div>

                <div class="mb-3 mt-3 col-6">
                    <label for="group" class="form-label">Group</label>
                    <input value="<%= userData.group %>" type="text" class="form-control" id="group" name="group"
                        required>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
                <!-- </div> -->

            </form>
        </div>
    </div>
</body>

</html>