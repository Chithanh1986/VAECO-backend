<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List users</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="user-info-container">
            <form method="POST" action="user/create-user">

                <!-- <div class="row"> -->

                <div class="mb-3 mt-3 col-6">
                    <!-- <img src="/images/logologin.jpg" class="img-fluid"> -->
                    <label for="vae_user" class="form-label">Username</label>
                    <input type="text" class="form-control" id="vae_user" name="vae_user" required>
                </div>

                <div class="mb-3 mt-3 col-6">
                    <label for="vae_id" class="form-label">Vaeco ID</label>
                    <input type="text" class="form-control" id="vae_id" name="vae_id" required>
                </div>

                <div class="mb-3 col-6">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <div class="mb-3 mt-3 col-6">
                    <label for="group" class="form-label">Group</label>
                    <input type="text" class="form-control" id="group" name="group" required>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <!-- </div> -->

            </form>
        </div>
        <div class="table-user mt-3">
            <h3>Table users:</h3>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Vaeco user</th>
                        <th scope="col">Vaeco ID</th>
                        <th scope="col">Group ID</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% userList.forEach( function (item,index) { %>
                        <tr>
                            <th scope="row">
                                <%= item.id %>
                            </th>
                            <td>
                                <%= item.vae_user %>
                            </td>
                            <td>
                                <%= item.vae_id %>
                            </td>
                            <td>
                                <%= item.group %>
                            </td>
                            <td>
                                <a class="btn btn-warning" href="/update-user/<%= item.id%>">
                                    Edit
                                </a>
                                <form style="display: inline" action="/delete-user/<%= item.id%>" method="POST">
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>

                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>
    </div>
</body>

</html>